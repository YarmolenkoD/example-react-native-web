{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@sharable": ["./src/sharable"],
      "@sharable/components": ["./src/sharable/components"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "tests",
    "src/.mobile-storybook",
    "src/.storybook"
  ]
}


